{
	"name": "omfg.io",
	"version": "0.0.1",
	"description": "OMFG website",
	"homepage": "https://cjpatoilo.com/omfg",
	"repository": "cjpatoilo/omfg.io",
	"license": "MIT",
	"author": "CJ Patoilo <cjpatoilo@gmail.com>",
	"private": "true",
	"engines": {
		"node": "^6.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.11.4",
		"babel-polyfill": "^6.9.1",
		"babel-preset-es2015": "^6.9.0",
		"babel-preset-stage-0": "^6.5.0",
		"backstopjs": "^1.3.5",
		"bower": "^1.7.9",
		"browser-sync": "^2.16.1",
		"cssnano-cli": "^1.0.4",
		"eslint": "^3.6.1",
		"eslint-config-standard": "^6.2.0",
		"eslint-plugin-promise": "^2.0.1",
		"eslint-plugin-standard": "^2.0.1",
		"gulp": "^3.9.1",
		"html-minifier-cli": "^0.1.0",
		"html-validator-cli": "^3.0.1",
		"husky": "^0.11.8",
		"imagemin-cli": "^3.0.0",
		"node-sass": "^3.7.0",
		"npm-check": "^5.2.3",
		"npm-run-all": "^3.1.0",
		"onchange": "^3.0.2",
		"opn-cli": "^3.1.0",
		"plato": "^1.7.0",
		"sass-lint": "^1.8.2",
		"sitespeed.io": "^3.11.8",
		"svg-sprite-generator": "^0.0.7",
		"svgo": "^0.6.6",
		"uglify-js": "^2.6.2"
	},
	"scripts": {
		"postinstall": "bower install",
		"prestart": "npm install",
		"pretest": "npm install",
		"prepush": "npm install && run-s build && chmod +x .bin/prepush.sh && .bin/prepush.sh",
		"plato": "plato -r -d test/complexity -l .eslintrc -t 'Code Complexity Tool' -x .json src/scripts/*.js && opn test/complexity/index.html",
		"sitespeedio": "sitespeed.io -u https://cjpatoilo.com/omfg -r test/perf --suppressDomainFolder --wptKey b277bb7109e15b600dafaf973f498dc1",
		"reference": "gulp --gulpfile node_modules/backstopjs/gulpfile.js reference --configPath=../../backstop.conf.js",
		"compare": "run-s build && gulp --gulpfile node_modules/backstopjs/gulpfile.js test --configPath=../../backstop.conf.js",
		"clean": "rm -rf dist && mkdir dist",
		"htmlmin": "htmlmin -u -o dist/index.html src/index.html",
		"validator": "html-validator --file=src/index.html --verbose --format=gnu",
		"sass": "node-sass --output-style compressed -o node_modules/.cssnano-cache src/styles",
		"cssnano": "mkdir -p dist/styles && cssnano node_modules/.cssnano-cache/* dist/styles/main.min.css && rm -rf node_modules/.cssnano-cache",
		"sass-lint": "sass-lint -c .sasslintrc src/styles/*.sass --verbose --no-exit",
		"babel": "babel -p -d node_modules/.babel-cache src/scripts",
		"uglify": "mkdir -p dist/scripts && uglifyjs node_modules/.babel-cache/*.js -m -c -o dist/scripts/main.min.js && rm -rf node_modules/.babel-cache",
		"eslint": "eslint -c .eslintrc src/scripts",
		"imagemin": "imagemin src/images/* -o dist/images",
		"svgo": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
		"serve": "browser-sync start -s dist -f dist",
		"build:templates": "run-s validator && cp -rf src/*.html dist && cp -rf src/*.json dist",
		"build:styles": "run-s sass-lint sass cssnano",
		"build:scripts": "run-s eslint babel uglify",
		"build:images": "run-s imagemin svgo",
		"build:vendors": "cp -rf bower_components dist",
		"build": "run-s clean build:templates build:styles build:scripts build:images build:vendors",
		"watch:templates": "onchange 'src/*.html' -- npm run build:templates",
		"watch:styles": "onchange 'src/styles' -- npm run build:styles",
		"watch:scripts": "onchange 'src/scripts' -- npm run build:scripts",
		"watch:images": "onchange 'src/images' -- npm run build:images",
		"watch:vendors": "onchange 'bower_components' -- npm run build:vendors",
		"watch": "run-p watch:templates watch:styles watch:scripts watch:images watch:vendors serve",
		"start": "run-s build watch",
		"test:npm": "npm-check -u",
		"test:complexity": "run-s plato",
		"test:perf": "run-s sitespeedio",
		"test:regression": "run-p serve compare",
		"test:build": "run-s build",
		"test": "run-s test:build"
	}
}
